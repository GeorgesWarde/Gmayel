<div class="container">
    <div class="row">

    <div class="col">
 <div class="d-flex flex-column flex-shrink-0 p-3 text-white bg-dark" style="width: 280px;height:650px;">
    <a href="/" class="d-flex align-items-center mb-3 mb-md-0 me-md-auto text-white text-decoration-none">
      <svg class="bi me-2" width="40" height="32"><use xlink:href="#bootstrap"/></svg>
      <span class="fs-4">Clinic Admin</span>
    </a>
    <hr>
    <ul class="nav nav-pills flex-column mb-auto">
      <li class="nav-item">
        <a href="#" class="nav-link active " aria-current="page">
          <svg class="bi me-2" width="16" height="16"><use xlink:href="#home"/></svg>
          Manage Doctors
        </a>
      </li>
      <li>
        <a href="/AdminPage/Appointmentscshtml" class="nav-link text-white">
          <svg class="bi me-2" width="16" height="16"><use xlink:href="#speedometer2"/></svg>
          Manage Appointments
        </a>
      </li>
    </ul>
    <hr>
    <div class="dropdown">
     
       <ul>
        <li><a href="/">Sign out</a></li>
      </ul>
    </div>
    </div>
    </div>
    
 <div class="col-9">
<h2>List of Doctors</h2>

<form  method="POST"> 
  <input style="border-radius:5px;"  type="text" name="doctorname" class="search" placeholder="Search here!">
  <input class="btn btn-primary" type="submit" name="submit" class="submit" value="Search">
  <a class='btn btn-primary btn-sm' href="/AdminPage/CreateDoctor">New Doctor</a>
</form>
<table class="table">
    <thead>
        <tr>
            <th>Id</th>
            <td>Full Name</td>
            <td>Username</td>
            <td>Age</td>
            <td>Gender</td>
            <td>Actions</td>
        </tr>
    </thead>
    <tbody>
        @foreach(var item in Model.listUsers)
        {
            <tr>
            <td>@item.id</td>
            <td>@item.full_name</td>
            <td>@item.username</td>
            <td>@item.age</td>
            <td>@item.Gender</td>
            <td>
                <a class="btn btn-primary btn-sm" href="/AdminPage/editDoctor?id=@item.id">Edit</a>
                    <a class="btn btn-primary btn-sm" href="/AdminPage/createAppointment?id=@item.id">Add Appointment</a>
                <a class="btn btn-danger btn-sm" href="/AdminPage/Delete?id=@item.id">Delete</a>
            </td>
        </tr> 
        }
    </tbody>

</table>
</div>
</div>
</div>